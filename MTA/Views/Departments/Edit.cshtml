@model MTA.Models.Department

@{
    ViewBag.Title = "Edit Department";
}

<h2 class="text-center text-uppercase font-weight-bold">@ViewBag.Title</h2>

<form asp-action="Edit" asp-controller="Departments" asp-route-id="@Model.Id" method="post" class="mt-4">

    <div class="form-group">
        <label asp-for="DepartmentName" class="form-label">Department Name</label>
        <input asp-for="DepartmentName" class="form-control" style="background-color: #2c3e50; color: #ecf0f1;" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>

    <br />

    <div class="text-center">
        <button class="btn btn-success btn-lg" type="submit">Modify Department</button>
    </div>

</form>

<style>
    h2 {
        font-family: 'Arial Black', sans-serif;
        letter-spacing: 2px;
    }
    .form-label {
        font-family: 'Courier New', monospace;
        font-size: 1.2rem;
        color: #ecf0f1;
    }
    .form-control {
        border: 2px solid #ecf0f1;
    }
    .form-control:focus {
        border-color: #ecf0f1;
        box-shadow: 0 0 5px #ecf0f1;
    }
    .btn-success {
        background-color: #27ae60;
        border-color: #27ae60;
    }
    .btn-success:hover {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }
</style>

