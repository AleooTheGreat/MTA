@model MTA.Models.Mission
@{
    ViewBag.Title = "Show Mission";
}

<h2 class="text-center text-uppercase font-weight-bold">@ViewBag.Title</h2>

<br />

<div class="card" style="background-color: #2c3e50; color: #ecf0f1; padding: 20px;">
    <h3 class="text-center">@Model.Name</h3>

    <br />

    <form method="post" asp-controller="Missions" asp-action="Delete" asp-route-id="@Model.Id" class="text-center">
        <button class="btn btn-outline-light btn-lg" type="submit">Delete Mission</button>
    </form>

    <br />

    <div class="text-center">
        <a class="btn btn-success btn-lg" href="/Missions/Index/">Show Missions List</a>
    </div>
</div>

<br />
<hr />
<br />

<style>
    h2 {
        font-family: 'Arial Black', sans-serif;
        letter-spacing: 2px;
    }
    h3 {
        font-family: 'Courier New', monospace;
        font-size: 1.5rem;
    }
    .btn-outline-light {
        border-color: #ecf0f1;
        color: #ecf0f1;
    }
    .btn-outline-light:hover {
        background-color: #ecf0f1;
        color: #2c3e50;
    }
    .btn-success {
        background-color: #27ae60;
        border-color: #27ae60;
    }
    .btn-success:hover {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }
</style>
