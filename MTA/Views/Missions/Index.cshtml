@{
    ViewBag.Title = "Mission List";
}

<h2 class="text-center text-uppercase font-weight-bold">@ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-info text-center">
        <h1>@ViewBag.message</h1>
    </div>
}

<br />

@foreach (MTA.Models.Mission mission in ViewBag.Missions)
{
    <div class="card mb-3" style="background-color: #2c3e50; color: #ecf0f1;">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-globe"></i> @mission.Name</h5>
            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-light" asp-controller="Missions" asp-action="Show" asp-route-id="@mission.Id">Show Mission</a>
                <a class="btn btn-outline-light" asp-controller="Missions" asp-action="Edit" asp-route-id="@mission.Id">Edit Mission</a>
            </div>
        </div>
    </div>
}

<br />
<div class="text-center">
    <a class="btn btn-success btn-lg" asp-controller="Missions" asp-action="New">Add a New Mission</a>
</div>
<br />

<style>
    h2 {
        font-family: 'Arial Black', sans-serif;
        letter-spacing: 2px;
    }
    .card-title {
        font-family: 'Courier New', monospace;
        font-size: 1.5rem;
    }
    .btn-outline-light {
        border-color: #ecf0f1;
        color: #ecf0f1;
    }
    .btn-outline-light:hover {
        background-color: #ecf0f1;
        color: #2c3e50;
    }
</style>
