<br />
<br />
<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />

<a asp-controller="Missions" asp-action="New" class="btn btn-success rounded-pill mb-5">
    <i class="bi bi-plus"></i> Add Mission
</a>

<div class="row">

    @foreach (var mission in ViewBag.Missions)
    {
        <div class="col-4 mb-4">

            <div class="card" style="background-color: #4b5320; color: #ecf0f1;">

                <div class="card-body">

                    <h5 class="card-title" name="Name">@mission.Name</h5>

                    @if (ViewBag.EsteAdmin)
                    {
                        <div><i class="bi bi-person"> Created by: </i> @mission.User.UserName</div>
                    }

                    <br />

                    <a asp-controller="Missions" asp-action="Show" asp-route-id="@mission.Id" class="btn btn-outline-light">Show Mission</a>

                    @if (ViewBag.AfisareButoane)
                    {
                        <a asp-controller="Missions" asp-action="Edit" asp-route-id="@mission.Id" class="btn btn-warning mt-2">Edit</a>
                        <form asp-controller="Missions" asp-action="DeleteConfirmed" asp-route-id="@mission.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger mt-2">Delete</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }

</div>

<style>
    h5 {
        font-family: 'Courier New', monospace;
        font-size: 1.5rem;
    }

    .btn-outline-light {
        border-color: #ecf0f1;
        color: #ecf0f1;
    }

    .btn-outline-light:hover {
        background-color: #ecf0f1;
        color: #4b5320;
    }

    .btn-success {
        background-color: #27ae60;
        border-color: #27ae60;
    }

    .btn-success:hover {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }

    .btn-warning {
        background-color: #f39c12;
        border-color: #f39c12;
    }

    .btn-warning:hover {
        background-color: #e67e22;
        border-color: #e67e22;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        border-color: #c0392b;
    }

    .card {
        border: 2px solid #3e4444;
    }
</style>
