@model MTA.Models.Mission

<br />

<h2 class="mb-5 text-center text-uppercase font-weight-bold" style="color: #ff0000;">Add Mission</h2>

<br />

<form asp-action="New" asp-controller="Missions" method="post" style="background-color: #4b5320; padding: 20px; border-radius: 10px;">

    <label asp-for="Name" class="form-label" style="color: #ff0000;">Mission Name</label>
    <br />
    <input asp-for="Name" class="form-control" style="background-color: #2c3e50; color: #ecf0f1;" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <br />

    <button type="submit" class="btn btn-outline-light btn-lg">Add Mission</button>

</form>

<style>
    h2 {
        font-family: 'Arial Black', sans-serif;
        letter-spacing: 2px;
    }
    .form-label {
        font-family: 'Courier New', monospace;
        font-size: 1.2rem;
    }
    .form-control {
        border: 2px solid #ecf0f1;
    }
    .form-control:focus {
        border-color: #ecf0f1;
        box-shadow: 0 0 5px #ecf0f1;
    }
    .btn-outline-light {
        border-color: #ecf0f1;
        color: #ecf0f1;
    }
    .btn-outline-light:hover {
        background-color: #ecf0f1;
        color: #4b5320;
    }
</style>

