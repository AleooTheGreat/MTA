@model MTA.Models.Alert


<h2>Edit alert</h2>
<br />


<form asp-action="Edit" asp-controller="Alerts" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label asp-for="Content" class="form-label">Alert content</label>
        <br />
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <br /><br />

    <button class="btn btn-primary" type="submit">Edit alert</button>

</form>


