@model MTA.Models.Project

<h2 class="text-center mt-5">Edit project</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Projects" asp-route-id="@Model.Id">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Project title</label>
                    <br />
                    <input asp-for="Title" class="form-control" />

                    <span asp-validation-for="Title" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Project content</label>
                    <br />
                    <textarea asp-for="Content" class="form-control summernote"></textarea>

                    <span asp-validation-for="Content" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label for="DepartmentId">Select project</label>
                    <br />
                    <select asp-for="DepartmentId" asp-items="Model.Dept" class="form-control">
                        <option value="">Select department</option>
                    </select>

                    <span asp-validation-for="DepartmentId" class="text-danger"></span>

                    <br />
                </div>

                <button class="btn btn-sm btn-success" type="submit">Modify project</button>

            </form>
        </div>
    </div>
</div>

