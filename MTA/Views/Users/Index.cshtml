@{
    var userRoles = ViewBag.UserRoles as Dictionary<string, IList<string>>;
}

<br />
<br />

<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p>
                            <i class="bi bi-person"> </i> UserName: @user.UserName
                            @if (userRoles.ContainsKey(user.Id) && userRoles[user.Id].Count > 0)
                            {
                                <span>(@string.Join(", ", userRoles[user.Id]))</span>
                            }
                        </p>

                        <p><i class="bi bi-envelope"></i> Email: @user.Email</p>

                        @if (@user.FirstName != null)
                        {
                            <p><i class="bi bi-person"> </i> First name: @user.FirstName</p>
                        }

                        @if (@user.LastName != null)
                        {
                            <p><i class="bi bi-person"> </i> Last name: @user.LastName</p>
                        }

                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Phone number: @user.PhoneNumber</p>
                        }
                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-success">Edit user</a>
                        </div>
                        <div>
                            <a asp-controller="Users" asp-action="Show" asp-route-id="@user.Id" class="btn btn-sm btn-success">View user</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<br />
<br />
